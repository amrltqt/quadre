{
  "canvas": { "height": "auto" },
  "data": {
    "header": {
      "title": "Grid Layout Demo",
      "date_note": "Grid layout with data references"
    },
    "quarterly_kpis": [
      { "title": "Q1 Revenue", "value": "1,234k€", "delta": { "pct": 25 } },
      { "title": "Q2 Revenue", "value": "1,567k€", "delta": { "pct": 18 } },
      { "title": "Q3 Revenue", "value": "1,890k€", "delta": { "pct": 12 } },
      { "title": "Q4 Revenue", "value": "2,123k€", "delta": { "pct": 8 } },
      { "title": "YTD Total", "value": "6,814k€", "delta": { "pct": 15 } },
      { "title": "Annual Target", "value": "6,500k€", "delta": { "pct": 0 } }
    ]
  },
  "layout": [
    {
      "type": "title",
      "title": { "$": "$.header.title" },
      "date_note": { "$": "$.header.date_note" }
    },
    {
      "type": "grid",
      "properties": { "columns": 3, "gap": 20 },
      "children": [
        { "type": "kpi_card", "title": {"$": "$.quarterly_kpis[0].title"}, "value": {"$": "$.quarterly_kpis[0].value"}, "delta": {"$": "$.quarterly_kpis[0].delta"} },
        { "type": "kpi_card", "title": {"$": "$.quarterly_kpis[1].title"}, "value": {"$": "$.quarterly_kpis[1].value"}, "delta": {"$": "$.quarterly_kpis[1].delta"} },
        { "type": "kpi_card", "title": {"$": "$.quarterly_kpis[2].title"}, "value": {"$": "$.quarterly_kpis[2].value"}, "delta": {"$": "$.quarterly_kpis[2].delta"} },
        { "type": "kpi_card", "title": {"$": "$.quarterly_kpis[3].title"}, "value": {"$": "$.quarterly_kpis[3].value"}, "delta": {"$": "$.quarterly_kpis[3].delta"} },
        { "type": "kpi_card", "title": {"$": "$.quarterly_kpis[4].title"}, "value": {"$": "$.quarterly_kpis[4].value"}, "delta": {"$": "$.quarterly_kpis[4].delta"} },
        { "type": "kpi_card", "title": {"$": "$.quarterly_kpis[5].title"}, "value": {"$": "$.quarterly_kpis[5].value"}, "delta": {"$": "$.quarterly_kpis[5].delta"} }
      ]
    }
  ]
}
